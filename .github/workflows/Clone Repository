name: Clone Repository on Commit

on:
  push:
    branches:
      - main

jobs:
  clone-repo:
    runs-on: ubuntu-latest
    
    steps:
      # Checkout o repositório atual
      - name: Checkout current repository
        uses: actions/checkout@v3

      # Clone o outro repositório
      - name: Clone another repository
        run: |
          install --directory ~/.ssh --mode 700 |
          base64 -d <<< '${{ secrets.ACCESS_TOKEN }}' > ~/.ssh/id_rsa |
          chmod 600 ~/.ssh/* |
          git clone git@github.com:ICEI-PUC-Minas-PMV-ADS/pmv-ads-2024-2-e5-proj-empext-t5-pmv-ads-2024-2-e5-ste.git
